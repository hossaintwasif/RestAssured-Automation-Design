<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <!-- Define custom properties (log file path) -->
    <Properties>
        <Property name="basePath">./logs</Property>
        <Property name="fileName">automation.log</Property>
    </Properties>

    <!-- Define appenders (where logs will go) -->
    <Appenders>

        <!-- Console appender -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <!-- Rolling file appender -->
        <RollingFile name="File"
                     fileName="${basePath}/${fileName}"
                     filePattern="${basePath}/automation-%d{yyyy-MM-dd-HH-mm}-%i.log.gz">

            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%t] %-5level %logger{36} - %msg%n"/>

            <!-- Trigger rolling based on file size -->
            <Policies>
                <SizeBasedTriggeringPolicy size="10 MB"/>
                <TimeBasedTriggeringPolicy/>
            </Policies>

            <!-- Keep last 10 backup files -->
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>

    </Appenders>

    <!-- Configure loggers -->
    <Loggers>
        <!-- Application loggers (optional: make package-specific loggers here) -->
        <Logger name="api" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Logger>

        <!-- Root logger (catches everything else) -->
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>

</Configuration>
